<?php

declare(strict_types=1);

namespace Tests\Traits;

use App\Models\Tenant;
use App\Models\User;
use Database\Seeders\RoleAndPermissionSeeder;
use Illuminate\Foundation\Testing\RefreshDatabase;
use Illuminate\Foundation\Testing\WithFaker;
use Illuminate\Support\Facades\Artisan;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Hash;
use Illuminate\Support\Facades\ParallelTesting;
use Illuminate\Support\Facades\URL;

trait TenantTestTrait
{
    use RefreshDatabase, WithFaker;

    /**
     * The tenant instance for the current test.
     */
    protected ?Tenant $tenant = null;

    /**
     * The database connections that should have transactions.
     */
    protected array $connectionsToTransact = [null, 'mysql'];

    

    /**
     * Setup the test environment with tenant.
     */
    public function setUpTenant(): void
    {
        $this->createTestTenant();
        $this->initializeTenant();
        $this->runTenantMigrations();
        $this->runTenantSeeders();

    }

    /**
     * Clean up test environment.
     */
    public function tearDownTenant(): void
    {
        if ($this->tenant) {
            // Clean up tenant data - no rollback command available for tenants
            // Just delete the tenant record from central database
            // The tenant database will be cleaned up by RefreshDatabase trait
            $this->tenant->delete();
            $this->tenant = null;
        }
    }

    /**
     * Create a test tenant.
     */
    protected function createTestTenant(): void
    {
        static $tenantCounter = 1;
        $tenantId = 'tenant_' . $tenantCounter++;

        // Configure database prefix for parallel testing
        if (ParallelTesting::token()) {
            config(['tenancy.database.prefix' => config('tenancy.database.prefix') . ParallelTesting::token() . '_']);
        }

        $dbName = config('tenancy.database.prefix') . $tenantId;

        // Drop database if it exists
        DB::unprepared("DROP DATABASE IF EXISTS `{$dbName}`");

        // Create tenant
        $this->tenant = Tenant::factory()->create([
            'id' => $tenantId,
            'name' => 'Test Tenant ' . ($tenantCounter - 1),
        ]);

        // Create domain for tenant
        $this->tenant->domains()->create([
            'domain' => $tenantId . '.test',
        ]);
    }

    /**
     * Initialize tenancy for test.
     */
    protected function initializeTenant(): void
    {
        // Initialize tenancy manually for testing
        tenancy()->initialize($this->tenant);
        
        // Set the root URL for tenant requests
        $domain = $this->tenant->domains->first()->domain;
        URL::forceRootUrl("http://{$domain}");
        
        // For testing, we don't need to go through HTTP tenant resolution
        // since we're manually initializing the tenant
    }

    /**
     * Run tenant migrations.
     */
    protected function runTenantMigrations(): void
    {
        echo "Running tenant migrations for: " . $this->tenant->id . "\n";
        $this->artisan('tenants:migrate', ['--force' => true]);
        echo "Tenant migrations completed.\n";
    }

    /**
     * Run tenant seeders.
     */
    protected function runTenantSeeders(): void
    {
        if ($this->tenant->wasRecentlyCreated) {
            // Note: RoleAndPermissionSeeder requires permission tables 
            // For now, skip seeders since permission migration is not in tenant migrations
            // TODO: Move permission migration to tenant migrations folder
        }
    }

    /**
     * Create a user for testing.
     */
    protected function createUser(array $attributes = []): User
    {
        return User::factory()->create(array_merge([
            'password' => Hash::make('password'),
            'tenant_id' => $this->tenant->id,
        ], $attributes));
    }

    /**
     * Create a document for testing.
     */
    protected function createDocument(array $attributes = []): \App\Models\Document
    {
        return \App\Models\Document::factory()->create(array_merge([
            'user_id' => $this->createUser()->id,
        ], $attributes));
    }
}